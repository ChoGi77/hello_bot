<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- 색상 정의 파일 포함 (Include color definitions) -->
    <xacro:include filename="color.urdf.xacro" />
    <xacro:include filename="inertia.urdf.xacro" />

    <!-- 베이스 링크: 로봇의 기준 프레임 (Base link: robot reference frame) -->
    <link name="base_link">
        <!--
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
            </geometry>
            <material name="material_name">
                <color rgba="1 1 1 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0" />
            <origin xyz="0 0 0" />  
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
        -->
    </link>

    <!-- 베이스와 섀시를 연결하는 고정 조인트 (Fixed joint: base to chassis) -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis_link" />
        <origin xyz="-0.3 0 0" rpy="0 0 0" />
    </joint>

    <!-- 섀시 링크 (Chassis link: robot body) -->
    <link name="chassis_link">
        <visual>
            <origin xyz="0.3 0 0.075" rpy="0 0 0" />
            <geometry>
                <box size="0.6 0.3 0.15" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.3 0 0.075" rpy="0 0 0" />
            <geometry>
                <box size="0.6 0.3 0.15" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="10.0" x="0.6" y="0.3" z="0.15">
            <origin xyz="0.3 0 0.075" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!-- 좌측 앞바퀴 조인트 (Left front wheel joint) -->
    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="chassis_link" />
        <child link="left_front_wheel_link" />
        <origin xyz="0.45 0.15 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <!-- 좌측 앞바퀴 링크 (Left front wheel link) -->
    <link name="left_front_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.0375" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.0375" />
            </geometry>
        </collision>
            <xacro:inertial_cylinder mass="1.0" radius="0.075" length="0.0375">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- 우측 앞바퀴 조인트 (Right front wheel joint) -->
    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="chassis_link" />
        <child link="right_front_wheel_link" />
        <origin xyz="0.45 -0.15 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <!-- 우측 앞바퀴 링크 (Right front wheel link) -->
    <link name="right_front_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.0375" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.0375" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" radius="0.075" length="0.0375">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- 좌측 뒷바퀴 조인트 (Left rear wheel joint) -->
    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="chassis_link" />
        <child link="left_rear_wheel_link" />
        <origin xyz="0.15 0.15 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <!-- 좌측 뒷바퀴 링크 (Left rear wheel link) -->
    <link name="left_rear_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.0375" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.0375" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" radius="0.075" length="0.0375">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- 우측 뒷바퀴 조인트 (Right rear wheel joint) -->
    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="chassis_link" />
        <child link="right_rear_wheel_link" />
        <origin xyz="0.15 -0.15 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <!-- 우측 뒷바퀴 링크 (Right rear wheel link) -->
    <link name="right_rear_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.0375" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.0375" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" radius="0.075" length="0.0375">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

</robot>